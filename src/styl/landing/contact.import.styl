.contact
  position relative
  padding 0
  background url(../img/contact.jpg) 50% 50% no-repeat
  background-size cover

  .container
    max-width 900px

  p
    margin 0 auto
    max-width 50%
    text-align center

    @media (max-width 767px)
      max-width 100%

  .say-hello
    margin-bottom 30px
    font 3em $quicksand

    @media (max-width 991px)
      font-size 2.5em

    @media (max-width 767px)
      font-size 2em

  ul.address-list
    display flex
    align-items stretch
    margin-bottom 70px

    @media (max-width 767px)
      flex-wrap wrap

    li
      flex-grow 1
      text-align center
      border 1px solid $white-transparent

      a
        display flex
        flex-direction column
        padding 20px 0
        height 100%

        &:hover
          background rgba(0,0,0, .3)
      p
        font 17px $quicksand
        color $white-transparent

        &.link
          margin-top 20px
          color $green

        i
          margin-right 5px
          font-size 20px

  form
    .input-form-group
      display flex
      justify-content space-between
      margin-bottom 40px

      @media (max-width 767px)
        margin-bottom 0
        flex-wrap wrap

      .mdl-textfield
        width 48%

        @media (max-width 767px)
          margin-bottom 20px
          width 100%

    .form-bottom
      overflow hidden
      display flex
      justify-content space-between
      align-items center
      margin-top 50px

      @media (max-width 767px)
        flex-wrap wrap
        margin-top 20px

    label
      margin-bottom 0

  textarea
    min-height 150px

  .mdl-textfield
    width 100%

    &.is-focused,
    &.is-dirty
      .mdl-textfield__label
        color $green

    &__label
      font-family $quicksand
      color $white-transparent

      &:after
        background $green

    &__input
      font-family $openSans
      border-color $white-transparent

  .mdl-button--accent.mdl-button--accent.mdl-button--raised
    float right
    background $green
    width 200px
    height 40px

    @media (max-width 767px)
      margin-bottom 50px
      width 100%

  .social-list
    display flex

    @media (max-width 767px)
      justify-content center
      width 100%
      order 2

    li
      margin-right 20px

      @media (max-width 767px)
        margin 0 10px

      a
        font-size 35px
        color $white-transparent

  > .navbar
    margin 0
    border none

    .navbar-nav
      > li
        > a
          padding-top 0
          padding-bottom 0
          line-height 55px
          color $green

        &.active
          > a
            color $green

            &:focus
            &:hover
              color $green

        .dropdown-menu
          border-radius 4px

.black-bg-wrap
  position absolute top left bottom right
  padding 50px 0 0
  width 100%
  height 100%
  background rgba(0,0,0, .8)
  color #fff