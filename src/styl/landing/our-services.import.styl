.our-services
  padding-bottom 30px

.services-list
  display flex
  justify-content center
  align-items flex-start
  flex-flow row wrap
  margin-top 100px

  li
    margin-bottom 60px
    padding 60px 30px 0
    min-width 100px
    width 25%
    text-align center
    font-size 20px

    @media (max-width 991px)
      width 33%

    @media (max-width 767px)
      width 100%

      @media (min-width 560px)
        width 50%

    h3
      font 20px $quicksand

    p, a
      font-size 15px

    a
      color $green
      text-transform capitalize
      font-family $quicksand

    &.angular
      background url("../img/icons/angular-icon.png") 50% 0 no-repeat
      background-size 50px auto

    &.react
      background url("../img/react-logo.png") 50% 0 no-repeat
      background-size 50px auto

    &.html
      background url("../img/icons/html-icon.ico") 50% 0 no-repeat
      background-size 50px auto

    &.css
      background url("../img/icons/css-icon.png") 50% 0 no-repeat
      background-size 50px auto

    &.wordpress
      background url("../img/wp-logo.png") 50% 0 no-repeat
      background-size 50px auto

    &.preprocessors
      background url("../img/preprocessors-logo.png") 50% 0 no-repeat
      background-size 80px auto