.navbar-default
  top -75px
  background $white
  transition top $animation-time ease-in-out

  &.visible
    top 0

  .navbar-nav
    > li
      > a
        padding-top 0
        padding-bottom 0
        line-height 55px
        color $gray

      &.active
        > a
        > a:focus
        > a:hover
          color $green
          background transparent

.dropdown-menu
  > li
    > a
      color $green

.navbar-brand
  margin 0
  padding-top 10px
  padding-bottom 10px
  height auto
  font 28px $quicksand

  a
    color $gray

    &:hover
      text-decoration none

  span
    color $green